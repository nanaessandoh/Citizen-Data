@*@model IEnumerable<CitizenData.Web.Models.User>*@
@model CitizenData.Web.Models.UserIndexModel

@{
    ViewData["Title"] = "Index";
}


<div class="row mb-3">
    <div class="col-md-12">
        <h3>Citizen Records</h3>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <form class="form-inline">
            <div class="form-group mx-md-3">
                <input asp-for="searchString" class="form-control" placeholder="Email">
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>

    </div>
    <div class="col-md-6 text-right">
        <a class="btn btn-primary" asp-action="Create">Register Citizen</a>
    </div>
</div>


@if (TempData["Message"] != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success" role="alert" id="bootstrap-alert">
                @TempData["Message"]
            </div>
        </div>
    </div>
}


<div id="assetsTable">
<table class="table">
    <thead>
        <tr class="text-center">
            <th>Photo</th>
            <th>Full Name</th>
            <th>Age</th>
            <th>Email</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Assets)
        {
        <tr>
            <td>
                <div>
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.ImageUrl" class="imageCell" />
                    </a>
                </div>
            </td>
            <td>
                @item.GivenName @item.Surname
            </td>
            <td>
                @item.Age
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Address
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit <i class="fa fa-edit"></i></a>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Details <i class="fa fa-info-circle" aria-hidden="true"></i></a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete <i class="fa fa-user-times"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>